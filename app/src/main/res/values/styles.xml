<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="backgroundContent">@color/backgroundContent</item>
        <item name="backgroundHeader">@color/backgroundHeader</item>

        <item name="colorPrimary">@color/default_primary_color</item>
        <item name="colorPrimaryDark">@color/default_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="iconTextColor">@color/text_primary_color</item>
        <item name="primaryTextColor">@color/primary_text_color</item>
        <item name="secondaryTextColor">@color/secondary_text_color</item>
        <item name="myTitleTextColor">@color/title_text_color</item>

        <item name="preferenceHeaderColor">@color/dark_primary_color</item>
        <item name="preferenceTitleColor">@color/black</item>
        <item name="preferenceSummaryColor">#AAAAAA</item>

        <item name="myButtonColor">#1E88E5</item>

        <item name="myDividerColor">@color/default_primary_color</item>

        <item name="iconLeft">@drawable/ic_left_100_white</item>
        <item name="iconSetting">@drawable/ic_settings_512_white</item>

        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>
    </style>

    <!-- Night mode theme. -->
    <style name="AppTheme.Night" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="backgroundContent">@color/backgroundContent_night</item>
        <item name="backgroundHeader">@color/backgroundHeader_night</item>

        <item name="colorPrimary">@color/default_primary_color_night</item>
        <item name="colorPrimaryDark">@color/default_primary_color_night</item>
        <item name="colorAccent">@color/accent_color_night</item>

        <item name="iconTextColor">@color/text_primary_color_night</item>
        <item name="primaryTextColor">@color/primary_text_color_night</item>
        <item name="secondaryTextColor">@color/secondary_text_color_night</item>
        <item name="myTitleTextColor">@color/title_text_color_night</item>

        <item name="preferenceHeaderColor">@color/title_text_color_night</item>
        <item name="preferenceTitleColor">@color/primary_text_color_night</item>
        <item name="preferenceSummaryColor">@color/secondary_text_color_night</item>

        <item name="myButtonColor">@color/title_text_color_night</item>

        <item name="myDividerColor">@color/title_text_color_night</item>

        <item name="iconLeft">@drawable/ic_left_100_black</item>
        <item name="iconSetting">@drawable/ic_settings_512_white</item>

        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/default_primary_color</item>
        <item name="colorPrimaryDark">@color/default_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="iconTextColor">@color/text_primary_color</item>
        <item name="primaryTextColor">@color/primary_text_color</item>
        <item name="secondaryTextColor">@color/secondary_text_color</item>
        <item name="iconLeft">@drawable/ic_left_100_white</item>
        <item name="iconSetting">@drawable/ic_settings_512_white</item>

        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>
    </style>

    <!-- Night mode theme. -->
    <style name="AppThemeActionBar.Night" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/default_primary_color_night</item>
        <item name="colorPrimaryDark">@color/default_primary_color_night</item>
        <item name="colorAccent">@color/accent_color_night</item>

        <item name="iconTextColor">@color/text_primary_color_night</item>
        <item name="primaryTextColor">@color/primary_text_color_night</item>
        <item name="secondaryTextColor">@color/secondary_text_color_night</item>
        <item name="iconLeft">@drawable/ic_left_100_black</item>
        <item name="iconSetting">@drawable/ic_settings_512_black</item>

        <item name="stickyListHeadersListViewStyle">@style/Widget.AppCompat.ListView</item>
    </style>

    <style name="Widget.ListView.Day" parent="@android:style/Widget.ListView">
        <item name="android:headerBackground">@color/text_primary_color</item>

    </style>

    <style name="Widget.ListView.Night" parent="@android:style/Widget.ListView">
        <item name="android:headerBackground">@color/text_primary_color_night</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
