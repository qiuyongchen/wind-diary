<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/iconTextColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/iconTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listview_item_title_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_media_ff" />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="10:57:54"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/Body" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconTitle"
            android:layout_marginTop="@dimen/activity_medium_margin"
            android:text="The premier store for distributing Android apps and games, with global reach and tools to help you gain traction in the marketplace. "
            android:textColor="?attr/textColor"
            android:textSize="@dimen/Subhead" />

    </LinearLayout>

</RelativeLayout>